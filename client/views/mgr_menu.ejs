<html>
<head>
	<title>Menu App</title>
	<script type="text/javascript" src="http://code.jquery.com/jquery-2.1.3.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.16/angular-route.min.js"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/menu.css" />
    <script type="text/javascript">
        var munch = angular.module('munch', ['ngRoute']);


    </script>
    <script type="text/javascript" src="../javascripts/factories/MenuFactory.js"></script>
    <script type="text/javascript" src="../javascripts/controllers/menusController.js"></script>
</head>
<body ng-app='munch'>
    <div class='container' ng-controller='menusController'>
        <h1>Manager Menu</h1>
        <div class='col-sm-12'>
            <table class='table table-striped table-condensed'>
                <thead>
                    <th>Menu Item</th>
                    <th>Description</th>
                    <th>Price ($)</th>
                </thead>
                <tbody>
                        <tr ng-repeat="item in items">
                            <td ng-model="index.name"><input type='text' value='{{item.name}}'></td>
                            <td ng-model="index.description"><textarea>{{item.description}}</textarea></td>
                            <td ng-model='order.price'>
                                <input type='text' value='{{item.price}}'>
                                <button class='btn btn-danger submit' ng-click="removeItem(item.name, item.description, $index, item.price)">Remove</button>
                                <button class='btn btn-primary submit' ng-click="updateMenu(item.name, index.description, index.price)">Update</button>
                            </td>
                        </tr>
                        <tr>
                            <td ng-model="item.name"><input type='text' value='{{item.name}}'></td>
                            <td ng-model="order.description"><input type='text' value='{{item.description}}'></td>
                            <td ng-model='order.price'>
                                <input type='text' value='{{item.price}}'>
                                <button class='btn btn-primary submit' ng-click="newOrder(item.name, item.description, $index, notes, index.note, item.price, order.qty)">Add Item</button>
                            </td>
                        </tr>
                </tbody>
            </table>
        <div class='footer'>
            <a href="/"><button class='btn btn-warning logout'>Logout</button></a>
        </div>
    </div>
    </div>
</body>
</html>
